include README.md
include LICENSE
include pyproject.toml
include requirements-dev.txt

# Include all Python files in the package
recursive-include pattern_local *.py
recursive-include pattern_local *.pyi

# Include tests
recursive-include pattern_local/tests *.py

# Include examples
recursive-include examples *.py
recursive-include examples *.ipynb

# Exclude certain files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .DS_Store
global-exclude .git*
global-exclude *.so 